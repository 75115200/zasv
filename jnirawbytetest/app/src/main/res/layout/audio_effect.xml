<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/label_reverb"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Reverberation"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/param_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="11"
        android:hint="11-18"
        android:inputType="number"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_alignTop="@+id/label_reverb"
        android:layout_toRightOf="@+id/label_reverb"
        />

    <TextView
        android:id="@+id/label_voice_shift"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Voice Shift"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_below="@+id/label_reverb"
        />

    <EditText
        android:id="@+id/param_input2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="0-6"
        android:text="3"
        android:inputType="number"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_alignTop="@+id/label_voice_shift"
        android:layout_toRightOf="@+id/label_voice_shift"
        />

    <TextView
        android:id="@+id/label_volume_scalar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Volume Scalar"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_below="@+id/label_voice_shift"
        />

    <EditText
        android:id="@+id/param_input3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="scalar : 0 - 200"
        android:text="100"
        android:inputType="number"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_alignTop="@+id/label_volume_scalar"
        android:layout_toRightOf="@+id/label_volume_scalar"
        />

    <CheckBox
        android:id="@+id/gain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/process_btn"
        android:layout_alignBottom="@+id/process_btn"
        android:layout_marginRight="16dp"
        android:text="enableGain"
        />

    <Button
        android:id="@+id/process_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="process"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="1px"
        android:layout_below="@+id/param_input3"
        android:layout_toRightOf="@+id/gain"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>